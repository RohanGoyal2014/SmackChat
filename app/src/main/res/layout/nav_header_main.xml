<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@color/colorAccent"
    android:gravity="bottom"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="50dp"
    android:theme="@style/ThemeOverlay.AppCompat.Dark"
    tools:paddingTop="50dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:orientation="horizontal"
            tools:layout_editor_absoluteX="50dp"
            tools:layout_editor_absoluteY="40dp">

            <LinearLayout
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/userImageNavHeader"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingTop="@dimen/nav_header_vertical_spacing"
                    app:srcCompat="@mipmap/ic_launcher"
                    tools:layout_editor_absoluteX="256dp"
                    tools:layout_editor_absoluteY="73dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/usernameNavHeader"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingTop="@dimen/nav_header_vertical_spacing"
                    android:text="Nimish Bansal"

                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    tools:layout_editor_absoluteX="16dp"
                    tools:layout_editor_absoluteY="7dp" />

                <TextView
                    android:id="@+id/userEmailNavHeader"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="nimish4july1998@gmail.com"
                    tools:layout_editor_absoluteX="121dp"
                    tools:layout_editor_absoluteY="38dp" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/loginNavHeader"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:elevation="24dp"
                android:onClick="loginButtonNavClicked"
                android:text="LOGIN" />

            <ImageButton
                android:id="@+id/newUserNavHeader"
                android:layout_width="17dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="addChannelNavClicked"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/addchannelbutton" />

        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
